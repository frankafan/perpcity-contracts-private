{
  "name": "@strobelabs/perpcity-contracts",
  "version": "1.0.0",
  "dependencies": {
    "prettier-plugin-solidity": "^1.4.2"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "solhint": "^3.6.2"
  },
  "private": true,
  "scripts": {
    "install-forge": "forge install",
    "build": "forge build --via-ir",
    "lint": "pnpm run lint:sol && pnpm run prettier:check",
    "lint:sol": "forge fmt --check && pnpm solhint \"{script,src,tests}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "lint:fix": "forge fmt && pnpm run prettier:write",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "deploy:testnet-usdc:base-sepolia": "source .env && forge script --chain 84532 script/DeployTestnetUSDC.s.sol:DeployTestnetUSDC --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vv --interactives 1",
    "deploy:registry:base-sepolia": "source .env && forge script --chain 84532 script/DeployRegistry.s.sol:DeployRegistry --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vv --interactives 1",
    "deploy:perp-hook:base-sepolia": "source .env && forge script --chain 84532 script/DeployPerpHook.s.sol:DeployPerpHook --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vv --interactives 1",
    "deploy:testnet-beacon:base-sepolia": "source .env && forge script --chain 84532 script/DeployTestnetBeacon.s.sol:DeployTestnetBeacon --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vv --interactives 1",
    "deploy:perp:base-sepolia": "source .env && forge script --chain 84532 script/DeployPerp.s.sol:DeployPerp --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vv --interactives 1",
    "open-maker-position:base-sepolia": "source .env && forge script --chain 84532 script/OpenMakerPosition.s.sol:OpenMakerPosition --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast -vv --interactives 1",
    "register-perp:base-sepolia": "source .env && forge script --chain 84532 script/RegisterPerp.s.sol:RegisterPerp --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast -vv --interactives 1",
    "update-beacon:base-sepolia": "source .env && forge script --chain 84532 script/UpdateBeacon.s.sol:UpdateBeacon --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast -vv --interactives 1"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
