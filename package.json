{
  "name": "@strobelabs/perpcity-contracts",
  "version": "1.0.0",
  "dependencies": {
    "prettier-plugin-solidity": "^1.4.2"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "solhint": "^3.6.2"
  },
  "private": true,
  "scripts": {
    "install-forge": "forge install",
    "build": "forge build --via-ir",
    "lint": "pnpm run lint:sol && pnpm run prettier:check",
    "lint:sol": "forge fmt --check && pnpm solhint \"{script,src,tests}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "lint:fix": "forge fmt && pnpm run prettier:write",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "deploy:perp-manager:base-sepolia": ". .env && forge script script/DeployPerpManager.s.sol:DeployPerpManager --rpc-url $BASE_SEPOLIA_RPC_URL --chain base-sepolia --account devKey --broadcast --verify -vv",
    "deploy:beacon-registry:base-sepolia": ". .env && forge create src/beacons/BeaconRegistry.sol:BeaconRegistry --rpc-url $BASE_SEPOLIA_RPC_URL --chain base-sepolia --account devKey --broadcast --verify -vv --constructor-args $REGISTRY_OWNER",
    "deploy:gbm-factory:base-sepolia": ". .env && forge create src/beacons/gbm/EZKLHalo2GBMFactory.sol:EZKLHalo2GBMFactory --rpc-url $BASE_SEPOLIA_RPC_URL --chain base-sepolia --account devKey --broadcast --verify -vv",
    "deploy:ownable-factory:base-sepolia": ". .env && forge create src/beacons/ownable/OwnableFactory.sol:OwnableFactory --rpc-url $BASE_SEPOLIA_RPC_URL --chain base-sepolia --account devKey --broadcast --verify -vv"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
