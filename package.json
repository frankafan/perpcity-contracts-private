{
  "name": "@strobelabs/perpcity-contracts",
  "version": "1.0.0",
  "dependencies": {
    "prettier-plugin-solidity": "^1.4.2"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "solhint": "^3.6.2"
  },
  "private": true,
  "scripts": {
    "install-forge": "forge install",
    "build": "forge build --via-ir",
    "lint": "pnpm run lint:sol && pnpm run prettier:check",
    "lint:sol": "forge fmt --check && pnpm solhint \"{script,src,tests}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "lint:fix": "forge fmt && pnpm run prettier:write",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:halmos": "FOUNDRY_PROFILE=halmos halmos",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "deploy:testnet-usdc:base-sepolia": "source .env && forge script --chain 84532 script/DeployTestnetUSDC.s.sol:DeployTestnetUSDC --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vv --sender $SENDER_ADDRESS --account devKey",
    "deploy:beacon-registry:base-sepolia": "source .env && forge script --chain 84532 script/DeployBeaconRegistry.s.sol:DeployBeaconRegistry --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vv --sender $SENDER_ADDRESS --account devKey",
    "deploy:testnet-beacon-factory:base-sepolia": "source .env && forge script --chain 84532 script/DeployTestnetBeaconFactory.s.sol:DeployTestnetBeaconFactory --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vv --sender $SENDER_ADDRESS --account devKey",
    "deploy:perp-manager:base-sepolia": "source .env && forge script --chain 84532 script/DeployPerpManager.s.sol:DeployPerpManager --rpc-url $BASE_SEPOLIA_RPC_URL --broadcast --verify -vv --sender $SENDER_ADDRESS --account devKey"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
